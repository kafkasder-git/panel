# 🏗️ KAFKAS DERNE YÖNETM SSTEM - ENVIRONMENT VARIABLES
# Bu dosya tüm gerekli environment variable'ları içerir
# Development için .env dosyasını oluşturmak üzere bu dosyayı kopyalayın:
# cp .env.example .env

# =============================================================================
# 🔧 APPLICATION CONFIGURATION
# =============================================================================

# Uygulama adı ve versiyonu
VITE_APP_NAME=Kafkas Derneği Yönetim Sistemi
VITE_APP_VERSION=1.0.0
VITE_APP_MODE=development

# Debug modu (development için true, production için false)
VITE_APP_DEBUG=true

# =============================================================================
# 🗄️ SUPABASE CONFIGURATION (ZORUNLU)
# =============================================================================

# Supabase proje URL'i
# Örnek: https://your-project.supabase.co

VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here


# Supabase service role key (sadece admin işlemleri için)
# Dashboard > Settings > API bölümünden alabilirsiniz
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# 🔒 SECURITY CONFIGURATION (ZORUNLU)
# =============================================================================

# CSRF protection için güçlü bir secret key
# Terminal'de şu komutu çalıştırarak oluşturun: openssl rand -hex 32
VITE_CSRF_SECRET=your_csrf_secret_key_here

# Demo credentials for development (not for production)
VITE_DEMO_EMAIL=demo@example.com
VITE_DEMO_PASSWORD=demo123

# Session timeout (saniye cinsinden)
VITE_SESSION_TIMEOUT=3600

# Rate limiting (dakika başına istek sayısı)
VITE_RATE_LIMIT=100

# =============================================================================
# 🤖 FEATURES CONFIGURATION
# =============================================================================

# OCR tanıma özelliklerini aktifleştirme
VITE_ENABLE_OCR=true

# PWA özelliklerini aktifleştirme
VITE_ENABLE_PWA=true

# Analytics'i aktifleştirme
VITE_ENABLE_ANALYTICS=false

# Mock data kullanımı (development için)
VITE_ENABLE_MOCK_DATA=true

# Offline mode desteği
VITE_ENABLE_OFFLINE_MODE=true

# =============================================================================
# 📧 EMAIL & SMS CONFIGURATION
# =============================================================================

# Email servisi (SendGrid, Mailgun, etc.)
VITE_EMAIL_SERVICE_PROVIDER=sendgrid
VITE_EMAIL_API_KEY=your_email_api_key

# SMS servisi (Twilio, NetGSM, etc.)
VITE_SMS_SERVICE_PROVIDER=twilio
VITE_SMS_API_KEY=your_sms_api_key
VITE_SMS_SID=your_sms_sid

# =============================================================================
# 📊 MONITORING & ANALYTICS
# =============================================================================

# Error monitoring (Sentry)
# Sentry DSN: Bu proje için Sentry'de oluşturduğunuz projenin "DSN" değeridir.
# DSN, Sentry proje ayarlarından alınmalıdır. (Örnek format: https://<public>@o0.ingest.sentry.io/0)
# Bu değer boş ise Sentry SDK başlatılmaz.
VITE_SENTRY_DSN=your_sentry_dsn

# Sentry environment: hangi ortamda çalıştığınızı belirtir (development, staging, production)
# Valid değerler: development | staging | production | test
# Üretimde 'production' olarak ayarlayın; varsayılan development'tır.
VITE_SENTRY_ENVIRONMENT=development

# Sentry release: sürüm takibi için kullanılır (ör. CI/CD tarafından set edilen git commit SHA veya version tag)
# Format: herhangi bir string (örn. v1.2.3 veya 9fceb02)
# Varsayılan boş bırakılmalı; CI/CD sırasında ayarlanması önerilir.
VITE_SENTRY_RELEASE=

# Sentry traces sample rate: performans izleme için örnekleme oranı
# Geçerli değer: 0.0 ile 1.0 arasında (0.0 = %0, 1.0 = %100)
# Varsayılan 0.0 ile kapalıdır. Production'da dikkatli ayarlayın.
# Önerilen: development=1.0, staging=0.5, production=0.1
VITE_SENTRY_TRACES_SAMPLE_RATE=0.0

# Sentry replays session sample rate: normal oturum kayıtları için örnekleme oranı
# Geçerli değer: 0.0 ile 1.0 arasında (0.0 = %0, 1.0 = %100)
# Varsayılan 0.0 ile kapalıdır. Production'da düşük tutun (ör. 0.05 = %5).
# Önerilen: development=0.0, staging=0.1, production=0.05
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.0

# Sentry replays on error sample rate: hata oluştuğunda oturum kayıtları için örnekleme oranı
# Geçerli değer: 0.0 ile 1.0 arasında (0.0 = %0, 1.0 = %100)
# Varsayılan 1.0 ile tüm hatalı oturumlar kaydedilir.
# Önerilen: tüm ortamlar için 1.0 (hataları debug etmek için kritik)
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Sentry debug: SDK debug çıktısını etkinleştirir (true/false)
# Hata ayıklama için local veya staging'de true yapılabilir; production'da false bırakın.
VITE_SENTRY_DEBUG=false

# =============================================================================
# Sentry Source Map Upload Configuration (Build-time only)
# =============================================================================

# VITE_SENTRY_AUTH_TOKEN:
# Bu, build sırasında source map'leri Sentry'ye yüklemek için kullanılan Sentry kimlik doğrulama token'ıdır.
# Oluşturmak için: Sentry > Settings > Developer Settings > Auth Tokens
# Oluşturduğunuz token'a şu izinleri verin: project:releases ve org:read
# ÖNEMLİ: Bu değer SADECE CI/CD ortamında (ör. Netlify) ayarlanmalıdır — yerel .env'de asla saklamayın.
# Güvenlik nedeniyle örnek dosyada boş bırakılmıştır.
# Format: string token (örn. sntrys_...)
VITE_SENTRY_AUTH_TOKEN=

# VITE_SENTRY_ORG:
# Sentry organizasyonunuzun slug'ıdır.
# Bulmak için: Sentry > Settings > General Settings > Organization Slug
# Örnek: my-organization
# Bu değer source map yüklemesi sırasında gereklidir.
VITE_SENTRY_ORG=

# VITE_SENTRY_PROJECT:
# Sentry projenizin slug'ıdır.
# Bulmak için: Sentry > Project Settings > General Settings > Project Slug
# Örnek: my-project
# Bu değer source map yüklemesi sırasında gereklidir.
VITE_SENTRY_PROJECT=

# Güvenlik uyarısı:
# - VITE_SENTRY_AUTH_TOKEN çok hassas bir bilgidir ve asla Git'e commit edilmemelidir.
# - Bu değişkenler yalnızca build (CI/CD) sırasında gereklidir (örn. Netlify). Yerel geliştirme için gerekli değildir.
# - Bu değerleri Netlify Dashboard > Site settings > Environment variables bölümünde tanımlamanız önerilir.
# - Local geliştirme yaparken source map yüklemesi yapmak istemiyorsanız bu değişkenleri ayarlamayın.

# Analytics (Google Analytics, Mixpanel, vb.)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXX

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# ☁️ CLOUD STORAGE CONFIGURATION
# =============================================================================

# File storage (AWS S3, CloudFlare R2, etc.)
VITE_STORAGE_PROVIDER=cloudflare_r2
VITE_STORAGE_ACCESS_KEY=your_storage_access_key
VITE_STORAGE_SECRET_KEY=your_storage_secret_key
VITE_STORAGE_BUCKET=your-bucket-name
VITE_STORAGE_REGION=auto

# =============================================================================
# 🗄️ DATABASE CONFIGURATION
# =============================================================================

# Database connection pool
VITE_DB_POOL_MIN=2
VITE_DB_POOL_MAX=10

# Query timeout (milisaniye)
VITE_DB_QUERY_TIMEOUT=30000

# Connection timeout (milisaniye)
VITE_DB_CONNECTION_TIMEOUT=60000

# =============================================================================
# 🌐 DEVELOPMENT CONFIGURATION
# =============================================================================

# Development server portu
PORT=3000

# Development server host
HOST=localhost

# Development server'ı otomatik aç
VITE_DEV_OPEN=true

# CORS aktifleştirme
VITE_DEV_CORS=true

# =============================================================================
# 🚀 PRODUCTION CONFIGURATION
# =============================================================================

# Production domain
VITE_PRODUCTION_DOMAIN=https://panel.kafkasder.com

# Production API URL
VITE_PRODUCTION_API_URL=https://api.kafkasder.com

# Production environment
NODE_ENV=production

# =============================================================================
# 🔧 LOGGING CONFIGURATION
# =============================================================================

# Log seviyesi (debug, info, warn, error)
VITE_LOG_LEVEL=info

# Console logging aktifleştirme
VITE_LOG_CONSOLE=true

# Error tracking aktifleştirme
VITE_LOG_ERROR_TRACKING=true

# Performance logging aktifleştirme
VITE_LOG_PERFORMANCE=true

# =============================================================================
# 📱 PWA CONFIGURATION
# =============================================================================

# PWA uygulama adı
VITE_PWA_APP_NAME=Kafkas Derneği Panel

# PWA kısa açıklaması
VITE_PWA_APP_SHORT_NAME=Kafkas Panel

# PWA açıklaması
VITE_PWA_APP_DESCRIPTION=Kapsamlı dernek yönetim sistemi

# PWA tema rengi
VITE_PWA_THEME_COLOR=#3B82F6

# PWA background color
VITE_PWA_BACKGROUND_COLOR=#FFFFFF

# PWA display modu
VITE_PWA_DISPLAY_MODE=standalone

# =============================================================================
# �� ADDITIONAL SECURITY
# =============================================================================

# Content Security Policy
VITE_CSP_ENABLE=true

# HSTS aktifleştirme
VITE_HSTS_ENABLE=true

# XSS protection aktifleştirme
VITE_XSS_PROTECTION=true

# Content Type Options
VITE_CONTENT_TYPE_OPTIONS=true

