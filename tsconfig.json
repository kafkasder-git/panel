{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "strict": false,
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* React & Bundler specific */
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "noEmit": true,
    
    /* Enhanced TypeScript strict mode settings */
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    
    /* Performance and optimization */
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true,
    
    /* Code generation */
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "App.tsx",
    "main.tsx",
    "types/**/*",
    "components/forms/FormProvider.tsx",
    "components/forms/BeneficiaryForm.tsx",
    "components/forms/index.ts",
    "components/pages/UserManagementPageReal.tsx",
    "components/pages/TasksPage.tsx",
    "components/ui/badge.tsx",
    "components/ui/button.tsx",
    "components/ui/card.tsx",
    "components/ui/dialog.tsx",
    "components/ui/input.tsx",
    "components/ui/label.tsx",
    "components/ui/select.tsx",
    "components/ui/textarea.tsx",
    "components/ui/tabs.tsx",
    "components/ui/toast.tsx",
    "components/ui/dropdown-menu.tsx",
    "components/ui/checkbox.tsx",
    "components/ui/radio-group.tsx",
    "components/AnimatedContainer.tsx",
    "components/EmptyState.tsx",
    "components/ErrorBoundary.tsx",
    "components/Header.tsx",
    "components/LazyComponents.tsx",
    "components/StoreErrorBoundary.tsx",
    "components/SentryTest.tsx",
    "components/SafeWrapper.tsx",
    "hooks/useMembers.ts",
    "hooks/useFormValidation.ts",
    "lib/supabase.ts",
    "lib/logging/logger.ts",
    "stores/**/*",
    "contexts/SupabaseAuthContext.tsx",
    "contexts/NotificationContext.tsx"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.*",
    "tests/**",
    "services/__tests__/**",
    "middleware/**",
    "lib/security/**",
    "services/**",
    "components/ux/**",
    "components/sync/**",
    "components/search/**",
    "components/operations/**",
    "components/mobile/**",
    "components/accessibility/**",
    "components/data/**",
    "components/notifications/**",
    "components/pwa/**",
    "components/utils/**",
    "components/kumbara/**",
    "components/ai/**",
    "components/app/**",
    "components/ui/enhanced-*",
    "components/PullToRefresh.tsx",
    "components/OCRScanner.tsx",
    "components/InteractiveChart.tsx",
    "hooks/useAdvanced*",
    "hooks/useData*",
    "hooks/useKeyboard*",
    "hooks/useMobile*",
    "hooks/usePerformance*",
    "hooks/useSearch*",
    "hooks/useTouchDevice*",
    "hooks/useAI*",
    "hooks/useBeneficiaries.ts",
    "hooks/usePagination.ts",
    "lib/environment.ts",
    "lib/errorHandling.ts",
    "lib/sentryInit.ts",
    "lib/security.ts",
    "utils/**",
    "contexts/AuthContext.tsx"
  ]
}